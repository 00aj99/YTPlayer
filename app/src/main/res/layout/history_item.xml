<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout
       android:id="@+id/hDate_layout"
       android:visibility="gone"
       android:layout_marginTop="15dp"
       android:gravity="center"
       android:padding="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:background="@drawable/chip_shape"
           android:paddingTop="7dp"
           android:id="@+id/hDate"
           android:minWidth="75dp"
           android:textAlignment="center"
           android:fontFamily=""
           android:paddingBottom="7dp"
           android:paddingStart="11dp"
           android:paddingEnd="11dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Today"/>
   </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginTop="13dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/history_background"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="203dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/hImage"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />
            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/hAdd_playlist"
                android:background="@drawable/add_button_shape"
                android:layout_margin="6dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp">
                <ImageView
                    android:tint="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_add"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/hRate_percent"
                    android:background="@drawable/chip_shape1"
                    android:paddingTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:fontFamily=""
                    android:paddingBottom="5dp"
                    android:paddingStart="11dp"
                    android:paddingEnd="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:paddingStart="5dp"
                android:background="#7F000000"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/hTitle"
                       android:textStyle="bold"
                       android:textColor="@color/white"
                       android:textSize="18sp"
                       android:fontFamily="@font/dmsans"
                       android:layout_width="match_parent"
                       android:maxLines="1"
                       android:text="---"
                       android:ellipsize="end"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/hAuthor"
                       android:textStyle="bold"
                       android:textColor="@color/white"
                       android:textSize="14sp"
                       android:fontFamily="@font/dmsans"
                       android:layout_width="match_parent"
                       android:maxLines="1"
                       android:text="---"
                       android:ellipsize="end"
                       android:layout_height="wrap_content" />
               </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>