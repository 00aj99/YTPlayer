<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/colorScreen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_warning_default"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/dmsans_font"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Deprecated Error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- <TextView
             android:id="@+id/headerTxt"
             android:textSize="17sp"
             android:layout_marginTop="25dp"
             android:textStyle="bold"
             android:fontFamily="@font/dmsans_font"
             android:textColor="@color/white"
             android:text="How to parse playlist url?"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>-->

        <TextView
            android:id="@+id/textTxt"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/light_white"
            android:layout_marginTop="10dp"
            android:text="This version of app has stop receiving updates. You need to manually update it to latest version from official website."
            android:fontFamily="@font/dmsans_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>