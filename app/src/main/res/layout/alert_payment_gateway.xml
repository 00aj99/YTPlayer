<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/dmsans_font"
        android:textSize="20sp"
        android:padding="15dp"
        android:background="@color/colorScreen"
        android:text="Select Gateway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/white"
        android:fontFamily="@font/dmsans_font"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="25dp"
        android:text="All payment process are carried out anonymously without preserving any data."
        android:background="@color/colorScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/paypalButton"
        android:src="@drawable/paypal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorScreen"/>

    <ImageView
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/razorpayButton"
        android:src="@drawable/razorpay"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorScreen"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="end"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancelButton"
            android:text="Cancel"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>